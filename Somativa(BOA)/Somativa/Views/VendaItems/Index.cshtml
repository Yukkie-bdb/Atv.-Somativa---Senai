@model IEnumerable<Somativa.Models.VendaItem>

@{
    ViewData["Title"] = "Item de Venda";
}
<partial name="~/Views/Home/_LayoutParcial.cshtml" />

<div class="bg-white container bordinha">
    <h1 class="text-center text-uppercase pt-3">@ViewData["Title"]</h1>

    <div class="table-responsive">
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Venda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unitario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr >
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.Nota)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unitario)
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.VendaItemId" class="aSemLinha">
                            <svg bootstrap-icon="PencilSquare" width="32" height="32" aria-label="Alarms" class="text-primary"></svg>
                        </a>
                        <button asp-action="Delete" asp-route-id="@item.VendaItemId" class="btn aSemLinha px-0 pe-sm-2" data-bs-toggle="modal" data-bs-target="#Apagar-@item.VendaItemId">
                            <svg bootstrap-icon="TrashFill" width="32" height="32" aria-label="Alarms" class="text-danger"></svg>
                        </button>
                    </td>
                </tr>

                <!-- Modal APAGAR -->
                <div class="modal fade" id="Apagar-@item.VendaItemId" tabindex="-1" aria-labelledby="ApagarLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header ">
                                <h3 class="text-center alert alert-danger">Tem certeza que deseja apagar este item?</h3>
                            </div>
                            <div class="modal-body">
                                <div>
                                    <dl class="row text-center">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Venda)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => item.Venda.Nota)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Produto)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => item.Produto.Nome)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Quantidade)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => item.Quantidade)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Unitario)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => item.Unitario)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            <div class="modal-footer text-center justify-content-center">
                                <form asp-action="Delete" asp-route-id="@item.VendaItemId">
                                    <input type="hidden" asp-for="@item.VendaItemId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close">Voltar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
    </div>

    <div class="text-center pb-3">
        <a asp-action="Create" asp-route-id="@ViewData["VendaId"]">
            <svg bootstrap-icon="PlusSquareFill" width="32" height="32" aria-label="Alarms" class="text-success"></svg>
        </a>
    </div>
</div>
