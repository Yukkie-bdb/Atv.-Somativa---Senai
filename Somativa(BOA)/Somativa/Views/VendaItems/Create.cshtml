@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Criar";
    var VendaIdAux = ViewData["VendaId"];
}

<div class="row container justify-content-center bg-white bordinha mx-0">
    <div class="col-md-4">
        <h1 class="text-center text-uppercase mt-3">Item de Venda</h1>
        <h2 class="text-center text-uppercase mt-3 text-secondary">Criar</h2>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="display:none">
                <label asp-for="VendaId" class="control-label"></label>
                <input asp-for="VendaId" value="@VendaIdAux" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input asp-for="Unitario" class="form-control" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>

            <div class="form-group text-center my-4">
                <input type="submit" value="Criar" class="btn btn-primary" asp-route-id="@VendaIdAux" />
                <a asp-action="Index" class="btn btn-secondary" asp-route-id="@VendaIdAux">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
